{
  "name": "ProjectManager",
  "description": "Plataforma integrada de gerenciamento de projetos e documentação",
  "version": "1.0.0",
  "services": [
    {
      "name": "web",
      "image": "node:18-alpine",
      "ports": ["3000:3000"],
      "environment": {
        "NEXT_PUBLIC_API_URL": "http://api:3001"
      },
      "depends_on": ["api", "redis", "db"]
    },
    {
      "name": "api",
      "image": "node:18-alpine",
      "ports": ["3001:3001"],
      "environment": {
        "DATABASE_URL": "postgresql://postgres:postgres@db:5432/projectmanager",
        "REDIS_URL": "redis://redis:6379",
        "JWT_SECRET": "your-secret-key"
      },
      "depends_on": ["db", "redis"]
    },
    {
      "name": "db",
      "image": "postgres:14",
      "ports": ["5432:5432"],
      "environment": {
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "postgres",
        "POSTGRES_DB": "projectmanager"
      },
      "volumes": ["postgres_data:/var/lib/postgresql/data"]
    },
    {
      "name": "redis",
      "image": "redis:7",
      "ports": ["6379:6379"],
      "volumes": ["redis_data:/data"]
    }
  ],
  "volumes": {
    "postgres_data": {},
    "redis_data": {}
  },
  "scripts": {
    "install": "pnpm install",
    "build": "pnpm build",
    "start": "pnpm start"
  }
} 