# Configurações Gerais
NODE_ENV=production

# Configurações do Banco de Dados
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=projectmanager
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/projectmanager
DATABASE_URL_OUTLINE=postgresql://postgres:postgres@postgres:5432/outline

# Configurações do Redis
REDIS_URL=redis://redis:6379

# Configurações de Autenticação
SECRET_KEY=sua_chave_secreta_aqui
JWT_SECRET=change-this-in-production

# URLs de Serviços (desenvolvimento)
PLANE_URL=http://plane:3000/api
OUTLINE_URL=http://outline:3001/api
API_URL=http://localhost:3001

# URLs para Frontend (desenvolvimento)
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_PLANE_URL=http://localhost:3000
NEXT_PUBLIC_OUTLINE_URL=http://localhost:3001

# Configurações de Portas
HTTP_PORT=80
HTTPS_PORT=443
API_PORT=3001
PLANE_PORT=3000
OUTLINE_PORT=3001
WEB_PORT=3000

# Configurações de Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=user@example.com
SMTP_PASSWORD=sua_senha_aqui
SMTP_FROM_EMAIL=noreply@example.com

# Configurações de Armazenamento (para arquivos e uploads)
# Opções: local, s3, gcs
STORAGE_PROVIDER=local
# Se usar S3:
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# Configurações de Logging
LOG_LEVEL=info

# Configurações de Temas e UI
DEFAULT_THEME=light
COMPANY_NAME=Sua Empresa

# Configuração de host (para Easypanel)
HOST_DOMAIN=projectmanager.example.com 